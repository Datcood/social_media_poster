#homepage::after {
  content: "";
  background: url(<%= asset_path 'pre_login_background.jpg' %>) no-repeat top center fixed;
  background-size: cover;
  opacity: 1.5;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  opacity: 0.4; 
}

#homepage {
  h1 {
    font-size: 46px;
    color: #275C8C;
  }

  h3, h4 {
    color: #275C8C;
  }

  h4 {
    text-align: left;
    float: left;
    padding: 5px;
    background-color: #fafafa;
    opacity: 0.7;
    -webkit-box-shadow: 0px 0px 15px 0px rgba(44,105,159,0.7);
    -moz-box-shadow: 0px 0px 15px 0px rgba(44,105,159,0.7);
    box-shadow: 0px 0px 15px 0px rgba(44,105,159,0.7);
  }

  .homepage-btn { margin: 20px 10px; }
}